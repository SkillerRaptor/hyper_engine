#-------------------------------------------------------------------------------------------
# Editor Config
#-------------------------------------------------------------------------------------------
root = true

# All files
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# C++ files
[*.{c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli}]
indent_style = space
indent_size = 4
